{
  "name": "@owliehq/neatsio",
  "version": "0.0.0-development",
  "description": "",
  "keywords": [],
  "main": "dist/neatsio-rest.js",
  "module": "dist/neatsio-rest.js",
  "typings": "dist/types/neatsio-rest.d.ts",
  "files": [
    "dist"
  ],
  "author": "HEN Xavier",
  "repository": {
    "type": "git",
    "url": "https://github.com/owliehq/neatsio"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --coverage --runInBand",
    "test:nocoverage": "jest --runInBand",
    "test:watch": "jest --runInBand --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls"
  },

  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },

  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/node": "^10.11.0",
    "@types/supertest": "^2.0.7",
    "@types/bluebird": "^3.5.27",
    "@types/express": "^4.17.0",
    "@types/mongoose": "^5.5.5",
    "@types/pluralize": "0.0.29",
    "@types/validator": "^10.11.1",
    "@typescript-eslint/eslint-plugin": "^1.10.1",
    "@typescript-eslint/parser": "^1.10.1",
    "body-parser": "^1.19.0",
    "colors": "^1.3.2",

    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",

    "jest": "^24.8.0",
    "jest-config": "^24.8.0",
    "lint-staged": "^8.0.0",
    "lodash.camelcase": "^4.3.0",
    "mongodb-memory-server": "^5.1.3",
    "prompt": "^1.0.0",
    "replace-in-file": "^3.4.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.0",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.21.1",
    "shelljs": "^0.8.3",
    "sqlite3": "^4.0.9",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "dot-prop": "^5.1.0",
    "express": "^4.17.1",
    "mongoose": "^5.5.14",
    "mongoose-deep-populate": "^3.1.1",
    "pluralize": "^8.0.0",
    "query-string": "^6.7.0",
    "sequelize": "^5.12.3"
  }
}
